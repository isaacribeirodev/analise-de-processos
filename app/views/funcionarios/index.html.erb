<% if notice.present? %>
  <div id="notice" class="alert alert-success" role="alert"><%= notice %></div>
<% end %>

<% content_for :title, "Funcionários" %>

<div class="float-md-end">
  <%= link_to "Adicionar Funcionário", new_funcionario_path, class: "btn btn-primary" %>
</div>

<h1>Funcionários</h1>

<div id="funcionarios">
  <table class="table table-hover">
    <thead>
      <th>Nome Completo</th>
      <th>CPF</th>
      <th>Cargo</th>
      <th></th>
    </thead>
    <tbody>
      <% @funcionarios.each do |funcionario| %>
        <tr>
          <td><%= funcionario.nome %></td>
          <td><%= funcionario.cpf %></td>
          <td><%= funcionario.cargo %></td>
          <td>
            <div class="d-grid gap-2">
              <%= link_to funcionario, class: "btn btn-outline-secondary btn-sm", title: "Exibir Cadastro" do %>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                  <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0"></path>
                  <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8m8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7"></path>
                </svg>
                <span class="visually-hidden">Exibir Cadastro</span>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
